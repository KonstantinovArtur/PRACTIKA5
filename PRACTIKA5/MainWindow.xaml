<Window x:Class="PRACTIKA5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRACTIKA5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Log" Grid.Row="1" TextWrapping="Wrap" Text=""/>
        <TextBlock TextWrapping="Wrap" Text="Логин" />
        <TextBlock Grid.Row="2" TextWrapping="Wrap" Text="Пароль"/>
        <PasswordBox x:Name="Pas" Grid.Row="3" />
        <Button Content="Авторизироваться" Grid.Row="4" Click="Button_Click"/>
    </Grid>
</Window>
